<!--Retriving the data sent from the controller-->
<!--So basically I am saying here that I am fetching the model data of type Item
    so this will recognize all of the Item data type -->
@model IEnumerable<E_Commerce_Website.Models.MyCourses>

<!--Here I am using boostrap library with the HTML to create a nice page-->

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Courses</h2>
            <p>The list of courses I bought</p>
        </div>
        <div class="col-6 text-right">
            <!--Specifying where the user will be redirected to Create page after clicking on Create new Item button-->
            <a asp-controller="MyCourses" asp-action="Create" class="btn btn-outline-primary">Add Course</a>
        </div>

    </div>

    <!--This gives me details how many items there are in the model-->
   
    @if(Model.Count() > 0){ 
        
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Course Title 
                    </th>
                    <th>
                        Course Author 
                    </th>
                    <th>
                        Price 
                    </th>
                </tr>
            </thead>
            <tbody>
                <!--During each iteration variable item will hold a value of an element from Model.
                    This table for now has only one row except the header row.
                    Each cell within this row will be populated with data from the database-->
                @foreach(var MyCourses in Model)
                {
                <tr>
                    <td width="30%">@MyCourses.CourseTitle</td>
                    <td width="30%">@MyCourses.CourseAuthor</td>
                    <td width="30%">@MyCourses.Price</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <!--If there are no items in the model (so in the database)-->
        <p>No items Created yet</p>
    }




</div>